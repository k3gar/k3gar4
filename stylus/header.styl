.logo 
    background-image: url('https://image.flaticon.com/icons/png/512/1674/1674294.png')
    background-size: contain;
    background-repeat: no-repeat
    background-position: center
    min-width: 50px
    width: 50px
    height: 50px
    float: left
    margin: 0 15px 0 35px


.main-nav
    padding: 0px
    background-color: var(--black)
    margin: 0 auto


.main-nav--options 
    list-style-type: none
    display: flex
    justify-content: space-evenly
    cursor: pointer


.main-nav__item
    text-align: center

.main-nav__item a 
    display: block
    padding: 15px 16px
    text-decoration: none
    color: var(--primary-soft-color)

.main-nav__item:hover
    background-color: var(--primary-dark-color)
    color: #ffe3de

@media(min-width: 634px)
    .main-nav
        margin: 0 auto
        padding: 0px
        background-color: var(--black)
        display: flex
    
