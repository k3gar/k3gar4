@import "./globales.styl"
@import "./header.styl"


.profile
    background-image: url('https://avatars.githubusercontent.com/u/69099162?s=400&u=e6196a181f40bd52233225231354ce5eea97dfa1&v=4')
    background-position: center
    background-repeat: no-repeat
    background-size: contain
    min-width: 150px
    width: 150px
    height: 150px
    min-height: 150px
    margin: 0 auto 35px
    border: 6px solid var(--primary-soft-color)
    border-radius: 50%

.profile:hover
    border: 6px solid var(--primary-dark-color)
    border-radius: 50%

.profile-border 
    min-width: 150px
    width: 200px
    height: 200px
    min-height: 150px
    border: 6px solid linear-gradient(to bottom right, #b827fc 0%, #2c90fc 25%, #b8fd33 50%, #fec837 75%, #fd1892 100%)
    border-radius: 50%

main 
    /* background-color: var(--secondary-soft-color) */
    background: rgb(10,45,158);
    background: linear-gradient(68deg, rgba(10,45,158,1) 24%, rgba(5,21,87,1) 70%);
main .introduction 
    text-align: center
    margin: 0 25px
    height: 95vh
    display: flex
    flex-direction: column
    justify-content: center

main .introduction h1 
    margin: 0 0 25px 0
    text-transform: uppercase
    font-family: var(--secondary-font)
    text-align: center

.introduction p 
    margin: 0 0 15px 0

.projects 
    background-color: var(--black)


.projects h2
    text-transform: uppercase
    color: var(--secondary-dark-color)
    font-family: var(--secondary-font)
    text-align: center


@media(min-width: 375px)
    main .introduction 
        margin: 0 60px
        justify-content: center
    

@media(min-width: 665px)
    .main-nav
        margin: 0 auto
        padding: 0px
        background-color: var(--black)
        display: flex
    
    main .introduction 
        display: grid
        grid-template-columns: auto
        grid-template-rows: auto
        align-content: center
        margin-right: 90px
    
    .introduction .profile 
        width: 180px
        height: 180px
        border-radius: 50%
        grid-row: 1 /3
        grid-column: 1 / 3
        min-width: 150px
        align-self: center
        margin: 0 15px 0 15px
    
    .introduction h1 
        grid-column: 3 / 6
        font-size: 4rem
        align-self: center
    
    .introduction p 
        font-size: 1.3rem
        grid-column: 3 / 6
        align-self: center
    


@media(min-width: 834px)
    .introduction .profile 
        grid-row: 1 /3
        grid-column: 1 / 3
        min-width: 150px
        width: 250px
        height: 250px
        border-radius: 50%
    
    .introduction h1 
        grid-column: 3 
        font-size: 4rem
        align-self: center
    
    .introduction text
        grid-column: 3 
        display: block
        margin-left: 20px


    .introduction p 
        font-size: 1.2rem
        margin: 1em 15px;
        line-height: 1.6em;
        text-align: center
